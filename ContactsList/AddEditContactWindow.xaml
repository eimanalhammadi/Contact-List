<Window x:Class="ContactsList.AddEditContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsList"
        mc:Ignorable="d"
        Title="Contact" Height="320" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Full Name:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="8,4" Text="{Binding FullName , UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Text="Email:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="8,4" Text="{Binding Email , UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="2" Text="Phone:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="8,4" Text="{Binding Phone , UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="3" Text="City:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="8,4" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Cancel" IsCancel="True" Width="90" Margin="0,0,8,0"/>
                <Button Content="Save" Width="90" IsDefault="True" Click="Save_Click"/>
            </StackPanel>


        </Grid>
    </Border>

</Window>
