<Window x:Class="ContactsList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsList"
        mc:Ignorable="d"
        Title="Contact Agenda (Database-First)" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">
       <!--Top toolbar-->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock Text="Search by name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchBox" Width="300" Height="28" VerticalAlignment="Center" KeyDown="SearchBox_KeyDown"/>
            <Button x:Name="SearchBtn" Content="Search" Width="90" Margin="8,0,0,0" Click="SearchBtn_Click"/>
            
            <Separator Width="24"/>

            <Button x:Name="AddBtn" Content="Add" Width="90" Click="AddBtn_Click"/>
            <Button x:Name="EditBtn" Content="Edit" Width="90" Margin="8,0,0,0" Click="EditBtn_Click"/>
            <Button x:Name="DeletBtn" Content="Delete" Width="90" Margin="8,0,0,0" Click="DeleteBtn_Click"/>
        </StackPanel>
        
        <!--Data grid-->
        <DataGrid x:Name="ContactsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  DockPanel.Dock="Bottom">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="2*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
          
    </DockPanel>
</Window>
